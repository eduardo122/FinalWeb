@model IEnumerable<Proyecto_Final_Web.Models.Socio>

@{
    ViewBag.Title = "Index";
}

<h2>Socios</h2>

<p>
    @Html.ActionLink("Agregar Nuevo Socio", "Create" , "",new {@class= "btn btn-success btn-lg text-white text-center" })
</p>
<div class=" tabla">
    <table class="table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayName("Nacimiento")
            </th>
            <th>
                @Html.DisplayName("Membresia")
            </th>
            <th>
                @Html.DisplayName("Trabajo")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionTrabajo)
            </th>
            <th>
                @Html.DisplayName("Telefono")
            </th>
            <th>
                @Html.DisplayName("Estado")
            </th>
            <th>
                @Html.DisplayName("Ingreso")
            </th>
            <th>
                @Html.DisplayName("Salida")
            </th>
            <th> @Html.DisplayName("Accion")</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    <img src="@Url.Content(item.Foto)" style="height:150px" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoMembresia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LugarTrabajo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DireccionTrabajo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefonoOficina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoMembresita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSalida)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm text-white" }) 
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm text-white" }) 
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm text-white" })
                    @Html.ActionLink("Ver Afiliados", "Afiliados", "Home", new { idSocio = item.Id }, new { @class = "btn btn-primary btn-sm text-white" })
                    @Html.ActionLink("Agregar Afiliado", "guardarAfiliados", "Home", new { idSocio = item.Id }, new { @class = "btn btn-info btn-sm text-white" })
                </td>
            </tr>
        }

    </table>
</div>