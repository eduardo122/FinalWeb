@using Proyecto_Final_Web.Models
@model Socio



@{
    ViewBag.Title = "Create";
}

<h2 class="text-info">Complete los datos del nuevo socio</h2>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/Bootstrap")
